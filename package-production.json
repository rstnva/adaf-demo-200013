{
  "scripts": {
    "docker:build": "docker build -f Dockerfile.prod -t adaf-dashboard:latest .",
    "docker:run": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:stop": "docker-compose -f docker-compose.prod.yml down",
    "docker:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "docker:restart": "docker-compose -f docker-compose.prod.yml restart",
    "prod:deploy": "chmod +x scripts/*.sh && ./scripts/deploy.sh",
    "prod:monitor": "./scripts/monitor.sh &",
    "prod:recovery": "./scripts/recovery.sh",
    "health:check": "curl -f http://localhost:3005/api/health || exit 1",
    "db:backup": "pg_dump $DATABASE_URL > backup-$(date +%Y%m%d_%H%M%S).sql",
    "db:restore": "psql $DATABASE_URL < $1"
  }
}