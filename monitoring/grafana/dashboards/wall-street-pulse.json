{
  "dashboard": {
    "id": null,
    "title": "ADAF Wall Street Pulse - Production Dashboard",
    "tags": ["adaf", "production", "wall-street-pulse"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "üöÄ Service Health Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=~\"adaf-app-.*\"}",
            "legendFormat": "{{app_env}} Instance"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "DOWN",
                    "color": "red"
                  },
                  "1": {
                    "text": "UP",
                    "color": "green"
                  }
                },
                "type": "value"
              }
            ],
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "üìà Request Rate (req/sec)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=~\"adaf-app-.*\"}[5m])",
            "legendFormat": "{{app_env}} - {{method}} {{route}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "lineWidth": 1,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": {"mode": "none", "group": "A"},
              "axisPlacement": "auto",
              "axisLabel": "",
              "axisColorMode": "text",
              "scaleDistribution": {"type": "linear"},
              "axisCenteredZero": false,
              "hideFrom": {"legend": false, "tooltip": false, "vis": false},
              "thresholdsStyle": {"mode": "off"}
            },
            "color": {"mode": "palette-classic"},
            "unit": "reqps",
            "min": 0
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "‚ö° Response Time Percentiles (Wall Street Pulse)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=~\"adaf-app-.*\",route=~\".*wsp.*|.*market.*|.*pulse.*\"}[5m]))",
            "legendFormat": "p50 - {{app_env}}"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=~\"adaf-app-.*\",route=~\".*wsp.*|.*market.*|.*pulse.*\"}[5m]))",
            "legendFormat": "p95 - {{app_env}}"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{job=~\"adaf-app-.*\",route=~\".*wsp.*|.*market.*|.*pulse.*\"}[5m]))",
            "legendFormat": "p99 - {{app_env}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "min": 0,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.2},
                {"color": "red", "value": 0.5}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [0.45], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "5m",
          "frequency": "10s",
          "handler": 1,
          "name": "WSP API p95 Latency Alert",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 4,
        "title": "üö® Error Rate (5xx responses)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=~\"adaf-app-.*\",status=~\"5..\"}[5m]) / rate(http_requests_total{job=~\"adaf-app-.*\"}[5m]) * 100",
            "legendFormat": "{{app_env}} Error Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [1], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "3m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "3m",
          "frequency": "10s",
          "handler": 1,
          "name": "High Error Rate Alert",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 5,
        "title": "üóÑÔ∏è Database Health",
        "type": "timeseries",
        "targets": [
          {
            "expr": "pg_up{postgres_role=\"primary\"}",
            "legendFormat": "Primary DB"
          },
          {
            "expr": "pg_up{postgres_role=\"standby\"}",
            "legendFormat": "Standby DB"
          },
          {
            "expr": "pg_stat_replication_lag_seconds",
            "legendFormat": "Replication Lag (sec)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 30}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "üíæ Redis Performance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "redis_up{redis_role=\"primary\"}",
            "legendFormat": "Primary Redis"
          },
          {
            "expr": "redis_up{redis_role=\"replica\"}",
            "legendFormat": "Replica Redis"
          },
          {
            "expr": "rate(redis_keyspace_hits_total[5m]) / (rate(redis_keyspace_hits_total[5m]) + rate(redis_keyspace_misses_total[5m])) * 100",
            "legendFormat": "Cache Hit Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "green", "value": 85}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 7,
        "title": "üåê NGINX Load Balancer",
        "type": "timeseries",
        "targets": [
          {
            "expr": "nginx_up",
            "legendFormat": "NGINX Status"
          },
          {
            "expr": "rate(nginx_http_requests_total[5m])",
            "legendFormat": "Requests/sec"
          },
          {
            "expr": "nginx_http_request_duration_seconds_bucket",
            "legendFormat": "Request Duration"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24}
      }
    ],
    "time": {"from": "now-1h", "to": "now"},
    "timepicker": {},
    "templating": {
      "list": [
        {
          "name": "environment",
          "type": "query",
          "query": "label_values(up{job=~\"adaf-.*\"}, app_env)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*"
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "expr": "increase(deployment_timestamp[1m])",
          "textFormat": "Deployment: {{version}}",
          "iconColor": "blue"
        }
      ]
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1,
    "links": [
      {
        "title": "ADAF Wall Street Pulse",
        "url": "/dashboard/wall-street-pulse",
        "type": "link"
      }
    ]
  }
}